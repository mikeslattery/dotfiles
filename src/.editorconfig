# This is a universal .editorconfig for all projects
# that don't have one.
# see also ~/.config/git/templates/README.md

root = true

# 2 space indentation
[{*.py,*.js,*.ts,*.java}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Text files we don't care about
[{*.svg}]
charset = utf-8
end_of_line = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset

# Ignore, tool-specific

[.run/*.xml]
end_of_line = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
trim_trailing_whitespace = unset
